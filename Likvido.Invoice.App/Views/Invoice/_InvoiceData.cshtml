@model InvoiceCreateViewModel

<h5 class="card-title">Invoice Data</h5>
<div class="form-group">
    <label>Internal note on invoice</label>
    <input type="text" class="form-control" asp-for="Comments">
</div>

<div data-validation-required class="form-group">
    <label>Invoice date </label>
    <input type="date" class="form-control date" asp-for="Date">
    <span class="text-danger d-none" data-valmsg-replace="true">Invoice date is required</span>
</div>

<div data-validation-required class="form-group">
    <label>Invoice payment date </label>
    <input type="date" class="form-control date" asp-for="DueDate">
    <span class="text-danger d-none" data-valmsg-replace="true">Invoice payment date is required</span>
</div>

<div class="form-group">
    <label>Your invoice number  </label>
    <input type="text" class="form-control" asp-for="ReferenceId">
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
        crossorigin="anonymous"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script>

    function validateInvoiceData() {
        let requiredFields = document.querySelectorAll("div[data-validation-required] div:not([d-none])");
        let isValid = true;

        for (let i = 0; i < requiredFields.length; i++) {

            let requiredInput = requiredFields[i].querySelector("input");

            if (requiredInput && requiredInput.value) {
                requiredFields[i].querySelector("span").classList.add("d-none");

            }
            else {
                requiredFields[i].querySelector("span").classList.remove("d-none");
                isValid = false;
            }
        }

        return isValid;

    }

</script>